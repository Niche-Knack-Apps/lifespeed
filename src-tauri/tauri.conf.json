{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lifespeed",
  "version": "1.0.3",
  "identifier": "com.niche-knack.lifespeed",
  "build": {
    "beforeDevCommand": "npm run bundle",
    "beforeBuildCommand": "npm run bundle:prod",
    "frontendDist": "../renderer"
  },
  "app": {
    "windows": [{ "title": "Lifespeed", "width": 1000, "height": 700, "minWidth": 400, "minHeight": 300, "resizable": true }],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true, "targets": ["deb", "appimage", "rpm"],
    "icon": ["icons/icon.png", "icons/icon.ico"],
    "publisher": "Niche-Knack", "category": "Utility",
    "shortDescription": "Blazing-fast journaling app",
    "linux": { "deb": { "section": "utils" } },
    "windows": { "allowDowngrades": true }
  },
  "plugins": { "fs": {}, "shell": { "open": true } }
}
